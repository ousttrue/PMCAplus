    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            // "program": "C:/Python311/python.exe",
            "program": "${env:LOCALAPPDATA}/Programs/Python/Python311/python.exe",
            "args": [
                "-m",
                "PyPMCA"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PYTHONPATH",
                    "value": "${workspaceFolder}\\prefix\\bin"
                }
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "PyPMCA Module",
            "type": "debugpy",
            "request": "launch",
            "module": "PyPMCA",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\prefix\\bin",
            }
        },
    ]
}